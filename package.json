{
	"name": "slver",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "bun --hot src/main.ts",
		"build": "bun run src/build.ts",
		"start": "bun run dist/main.js",
		"fm": "bunx --bun prettier --write .",
		"lint": "bunx oxlint --type-aware",
		"db:mig": "bunx --bun prisma migrate dev --create-only",
		"db:push": "bunx --bun prisma migrate deploy",
		"db:gen": "bunx --bun prisma generate",
		"db:studio": "bunx --bun prisma studio",
		"db:seed": "bunx --bun prisma db seed",
		"db:reset": "bunx --bun prisma migrate reset"
	},
	"dependencies": {
		"@prisma/adapter-libsql": "^7.1.0",
		"@prisma/adapter-neon": "^7.1.0",
		"@prisma/client": "^7.2.0",
		"dotenv": "^17.2.3",
		"jsonwebtoken": "^9.0.3",
		"nodemailer": "^7.0.11",
		"pg": "^8.16.3",
		"typescript": "^5.9.3",
		"winston": "^3.19.0",
		"zod": "^4.1.13"
	},
	"devDependencies": {
		"@types/bun": "^1.3.3",
		"@types/jsonwebtoken": "^9.0.10",
		"@types/nodemailer": "^7.0.4",
		"@types/pg": "^8.15.6",
		"oxlint": "^1.31.0",
		"oxlint-tsgolint": "^0.8.3",
		"prettier": "^3.7.4",
		"prisma": "^7.2.0"
	},
	"trustedDependencies": [
		"@prisma/engines",
		"prisma"
	]
}
