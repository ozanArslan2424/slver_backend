model Thing {
    id        Int      @id @default(autoincrement())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    content  String
    isDone   Boolean   @default(false)
    doneDate DateTime?
    dueDate  DateTime?

    attachments  Attachment[] @relation("thing_attachments")
    seenStatuses SeenStatus[] @relation("thing_seen_status")

    assignedToId Int?
    assignedTo   Person? @relation("thing_assigned_to", fields: [assignedToId], references: [id], onDelete: SetNull)
    createdById  Int
    createdBy    Person  @relation("thing_created_by", fields: [createdById], references: [id], onDelete: Cascade)
    groupId      Int?
    group        Group?  @relation("thing_group", fields: [groupId], references: [id])

    @@map("thing")
}
