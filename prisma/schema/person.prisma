model Person {
    id        Int      @id @default(autoincrement())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    name  String
    email String     @unique
    image String?
    role  PersonRole @default(user)

    memberships        Membership[] @relation("person_membership")
    assignedThings     Thing[]      @relation("thing_assigned_to")
    createdThings      Thing[]      @relation("thing_created_by")
    createdComments    Comment[]    @relation("comment_created_by")
    createdAttachments Attachment[] @relation("attachment_created_by")
    seenStatuses       SeenStatus[] @relation("person_seen_status")

    userId String @unique
    user   User   @relation("user_person", fields: [userId], references: [id], onDelete: Cascade)

    @@map("profile")
}
